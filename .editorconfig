root = true

[*]
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
# Configure extension Editor Guidelines
# (https://marketplace.visualstudio.com/items?itemName=PaulHarrington.EditorGuidelines).
guidelines = 80
guidelines_style = 1px dash green

[*.{json,md,css,props,yml,csproj}]
indent_size = 2

[*.{cs}]
indent_size = 4
